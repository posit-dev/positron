{
  "name": "positron-mcp",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "1.0.0",
  "publisher": "positron",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "id": "positron.mcp",
      "order": 100,
      "title": "Positron MCP",
      "type": "object",
      "properties": {
        "positron.mcp.enable": {
          "type": "boolean",
          "default": false,
          "description": "Enable the experimental Positron MCP server (requires restart)."
        }
      }
    },
    "commands": [
      {
        "command": "positron.mcp.enableServer",
        "title": "Positron MCP: Enable Server",
        "category": "Positron"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "positron.mcp.enableServer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.5",
    "@vscode/vsce": "^3.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/posit-dev/positron"
  }
}