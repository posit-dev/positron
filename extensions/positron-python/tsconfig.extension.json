{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            "es2018",
            "ES2019",
            "ES2020",
        ],
        "types": ["reflect-metadata"],
        "sourceMap": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitThis": false
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode test",
        "build"
    ],
    "include": [
        "src/client/**/*",
        "src/*",
        "typings/*.d.ts",
        "types/*.d.ts",
        "../../src/positron-dts/positron.d.ts"
    ]
}
