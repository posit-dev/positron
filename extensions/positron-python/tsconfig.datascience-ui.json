{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "out",
        "lib": [
            "es6",
            "dom"
        ],
        "jsx": "react",
        "sourceMap": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strict": true
    },
    "exclude": [
        ".vscode-test",
        "src/test",
        "src/server",
        "src/client",
        "build"
    ]
}
