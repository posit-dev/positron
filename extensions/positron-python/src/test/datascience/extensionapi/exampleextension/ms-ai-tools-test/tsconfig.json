{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"]
        },
        "module": "commonjs",
        "target": "es2018",
        "outDir": "dist",
        "lib": [
            "es6",
            "es2018",
            "dom",
            "ES2019",
            "ES2020"
        ],
        "jsx": "react",
        "sourceMap": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        ".vscode test",
        "build",
        "out",
    ]
}
