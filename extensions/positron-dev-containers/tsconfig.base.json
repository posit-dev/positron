{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "es2018",
		"outDir": "out",
		"lib": [
			"es6",
			"es2018",
			"dom",
			"ES2019",
			"ES2020"
		],
		"types": ["node"],
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true
	}
}
