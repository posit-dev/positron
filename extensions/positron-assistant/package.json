{
  "name": "positron-assistant",
  "displayName": "Assistant",
  "description": "Positron Assistant",
  "version": "0.0.1",
  "publisher": "positron",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "enabledApiProposals": [
    "defaultChatParticipant"
  ],
  "contributes": {
    "menus": {
      "chat/input": [
        {
          "command": "positron-assistant.addModelConfiguration",
          "group": "navigation@10",
          "when": "!positron-assistant.hasChatModels"
        },
        {
          "command": "positron-assistant.addModelConfiguration",
          "group": "inline",
          "when": "positron-assistant.hasChatModels"
        }
      ]
    },
    "commands": [
      {
        "command": "positron-assistant.addModelConfiguration",
        "title": "Add Language Model",
        "category": "Positron Assistant"
      }
    ],
    "languageModels": [
      {
        "vendor": "positron"
      }
    ],
    "configuration": {
      "title": "Positron Assistant",
      "properties": {
        "positron.assistant.models": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Identifier for the model provider, used for API key storage."
              },
              "name": {
                "type": "string",
                "description": "Display name for the model."
              },
              "model": {
                "type": "string",
                "description": "The specific model to use."
              },
              "baseUrl": {
                "type": "string",
                "description": "URL prefix for API calls."
              },
              "toolCalls": {
                "type": "boolean",
                "description": "Should the LLM make tool calls?"
              },
              "provider": {
                "type": "string",
                "enum": [
                  "anthropic",
                  "echo",
                  "error",
                  "mistral",
                  "ollama",
                  "openai",
                  "openrouter",
                  "bedrock"
                ],
                "description": "The language model provider."
              },
              "type": {
                "enum": [
                  "chat",
                  "completion"
                ],
                "description": "Type of model; chat participant or code completion."
              }
            },
            "required": [
              "name",
              "provider"
            ],
            "additionalProperties": false
          },
          "description": "Array of language model configurations."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@ai-sdk/amazon-bedrock": "^1.1.5",
    "@ai-sdk/anthropic": "^1.0.5",
    "@ai-sdk/openai": "^1.0.8",
    "@aws-sdk/credential-providers": "^3.734.0",
    "@eslint/js": "^9.13.0",
    "@openrouter/ai-sdk-provider": "^0.0.6",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^20",
    "@types/vscode": "^1.73.0",
    "ai": "^4.1.0",
    "eslint": "^9.13.0",
    "ollama-ai-provider": "^1.1.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.11.0",
    "zod": "^3.24.1"
  }
}
