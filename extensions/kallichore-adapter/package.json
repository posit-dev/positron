{
  "name": "kallichore-adapter",
  "displayName": "%displayName%",
  "description": "%description%",
  "publisher": "vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "gulp compile-extension:kallichore-adapter",
    "install-kallichore": "ts-node scripts/install-kallichore-server.ts",
    "lint": "eslint src --ext ts",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "yarn run compile",
    "watch": "gulp watch-extension:kallichore-adapter"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Kallichore Configuration",
      "properties": {
        "kallichoreSupervisor.enable": {
          "type": "boolean",
          "default": false,
          "description": "Run Jupyter kernels under the Kallichore supervisor."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/posit-dev/positron"
  },
  "devDependencies": {
    "@types/decompress": "^4.2.7",
    "@types/request": "^2.48.12",
    "@types/tail": "^2.2.3",
    "@types/ws": "^8.5.12",
    "decompress": "^4.2.1"
  },
  "positron": {
    "binaryDependencies": {
      "kallichore": "0.1.2"
    }
  },
  "dependencies": {
    "request": "^2.88.2",
    "tail": "^2.2.6",
    "ws": "^8.18.0"
  }
}
