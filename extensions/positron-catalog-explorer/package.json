{
  "name": "catalog-explorer",
  "publisher": "posit",
  "author": "Posit Software, PBC",
  "displayName": "Catalog Explorer",
  "description": "Explore tables, views, and files backed by data catalogs.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Data Science"
  ],
  "keywords": [
    "Positron"
  ],
  "activationEvents": ["onFileSystem:dbfs"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "posit.catalog-explorer.addCatalogProvider",
        "category": "Catalogs",
        "title": "Add Catalog Provider",
        "icon": "$(add)"
      },
      {
        "command": "positron-catalog-explorer.openWith",
        "category": "Catalogs",
        "title": "Open With...",
        "enablement": "view == positron-catalog-explorer"
      },
      {
        "command": "positron-catalog-explorer.openInSession",
        "category": "Catalogs",
        "title": "Open in Session",
        "when": "isPositron",
        "enablement": "view == positron-catalog-explorer"
      },
      {
        "command": "positron-catalog-explorer.copyPath",
        "category": "Catalogs",
        "title": "Copy Path",
        "icon": "$(copy)",
        "enablement": "view == positron-catalog-explorer"
      }
    ],
    "views": {
      "positron-connections": [
        {
          "id": "positron-catalog-explorer",
          "name": "Catalog Explorer",
          "when": "isPositron"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "positron-catalog-explorer",
        "contents": "Explore tables, views, and more in Databricks Unity Catalog, AWS Glue, Azure Data Lake Storage, or any Apache Iceberg-compatible catalog.\n[Configure a Catalog Provider](command:posit.catalog-explorer.addCatalogProvider)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "posit.catalog-explorer.addCatalogProvider",
          "when": "view == positron-catalog-explorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "positron-catalog-explorer.openWith",
          "when": "view == positron-catalog-explorer && viewItem == file",
          "group": "1_primary@2"
        },
        {
          "command": "positron-catalog-explorer.openInSession",
          "when": "isPositron && view == positron-catalog-explorer && viewItem == file",
          "group": "1_primary@3"
        },
        {
          "command": "positron-catalog-explorer.copyPath",
          "when": "view == positron-catalog-explorer && (viewItem == file || viewItem == folder || viewItem == volume)",
          "group": "2_path@0"
        }
      ]
    },
    "keybindings":[
      {
        "command": "positron-catalog-explorer.copyPath",
        "key": "Ctrl+Alt+C",
        "when": "focusedView == positron-catalog-explorer"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
