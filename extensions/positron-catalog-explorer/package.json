{
  "name": "positron-catalogs",
  "publisher": "posit",
  "author": "Posit Software, PBC",
  "displayName": "Positron Catalog Explorer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onFileSystem:dbfs"],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "positron-connections": [
        {
          "id": "positron-catalog-explorer",
          "name": "Catalog Explorer",
          "when": "isPositron"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "positron-catalog-explorer",
        "contents": "Explore tables, views, and more in Databricks Unity Catalog, AWS Glue, Azure Data Lake Storage, or any Apache Iceberg-compatible catalog.\n[Configure a Catalog](command:positron-catalog-explorer.addCatalog)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
